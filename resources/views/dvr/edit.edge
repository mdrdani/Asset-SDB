<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <title>Data DVR</title>
</head>
<body>

<div class="container" style="margin-top: 80px">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          Tambah Data DVR
        </div>
        <div class="card-body">
          <form action="{{ route('dvr.update', { id: dvr.id }) }}" method="POST">
            {{ csrfField() }}
            <div class="form-group">
                <label>Nama Barang</label>
                <input class="form-control" type="text" value="{{ dvr.namabarang}}" name="namabarang" placeholder="Input Nama Barang">
              </div>
              <div class="form-group">
                <label>Serial Number</label>
                <input class="form-control" type="text" value="{{ dvr.serialnumber}}" name="serialnumber" placeholder="Input Serial Number">
              </div>
              <div class="form-group">
                <label>Bagian Unit</label>
                <select name="bagianunit" id="" class="form-control">
                    <option value="" disabled>{{ dvr.bagianunit}}</option>
                    <option value="IT">IT</option>
                    <option value="Headmaster">Headmaster</option>
                    <option value="Marketing">Marketing</option>
                    <option value="TNTK">Dep. TNTK</option>
                    <option value="SD">Dep. SD</option>
                    <option value="SMP">SMP</option>
                    <option value="SMA">SMA</option>
                </select>
              </div>
              <div class="form-group">
                <label>Quantity</label>
                <input class="form-control" value="{{ dvr.quantity}}" type="number" name="quantity" placeholder="Input Quantity">
              </div>
              <div class="form-group">
                <label>Harga</label>
                <input class="form-control" value="{{ dvr.harga}}" type="number" name="harga" placeholder="Input Harga">
              </div>
            <div class="form-group">
              <label>Keterangan</label>
              <textarea class="form-control" name="keterangan"rows="5" placeholder="Masukkan Keterangan">{{ dvr.keterangan}}</textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-md btn-success">Simpan</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>