<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <title>Data UPS</title>
</head>
<body>

<div class="container" style="margin-top: 80px">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          Tambah Data UPS
        </div>
        <div class="card-body">
          <form action="{{ route('ups.store') }}" method="POST" enctype="multipart/form-data">
            {{ csrfField() }}
            <div class="form-group">
              <label>Tanggal</label>
              <input class="form-control" type="date" name="tanggal">
              {{ elIf('<span class="text-danger">$self</span>', getErrorFor('tanggal'), hasErrorFor('tanggal') ) }}
            </div>
            <div class="form-group">
                <label>Nama Barang</label>
                <input class="form-control" type="text" name="namabarang" placeholder="Input Nama Barang">
                {{ elIf('<span class="text-danger">$self</span>', getErrorFor('namabarang'), hasErrorFor('namabarang') ) }}
              </div>
              <div class="form-group">
                <label>Serial Number</label>
                <input class="form-control" type="text" name="serialnumber" placeholder="Input Serial Number">
                {{ elIf('<span class="text-danger">$self</span>', getErrorFor('serialnumber'), hasErrorFor('serialnumber') ) }}
              </div>
              <div class="form-group">
                <label>File/Gambar</label>
                <input class="form-control" type="file" name="gambar">
                {{ elIf('<span class="text-danger">$self</span>', getErrorFor('gambar'), hasErrorFor('gambar') ) }}
              </div>
              <div class="form-group">
                <label>Bagian Unit</label>
                <select name="bagianunit" id="" class="form-control">
                    <option value="IT">IT</option>
                    <option value="Headmaster">Headmaster</option>
                    <option value="Marketing">Marketing</option>
                    <option value="TNTK">Dep. TNTK</option>
                    <option value="SD">Dep. SD</option>
                    <option value="SMP">SMP</option>
                    <option value="SMA">SMA</option>
                </select>
              </div>
              <div class="form-group">
                <label>Quantity</label>
                <input class="form-control" type="number" name="quantity" placeholder="Input Quantity">
                {{ elIf('<span class="text-danger">$self</span>', getErrorFor('quantity'), hasErrorFor('quantity') ) }}
              </div>
              <div class="form-group">
                <label>Harga</label>
                <input class="form-control" type="number" name="harga" placeholder="Input Harga">
                {{ elIf('<span class="text-danger">$self</span>', getErrorFor('harga'), hasErrorFor('harga') ) }}
              </div>
            <div class="form-group">
              <label>Keterangan</label>
              <textarea class="form-control" name="keterangan"rows="5" placeholder="Masukkan Keterangan"></textarea>
              {{ elIf('<span class="text-danger">$self</span>', getErrorFor('keterangan'), hasErrorFor('keterangan') ) }}
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-md btn-success">Simpan</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>